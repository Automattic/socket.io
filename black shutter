<body>
  <canvas id="gameCanvas"></canvas>
  <div class="game-info" id="gameInfo">
    <div class="status">Coins: <span id="coins">1000</span></div>
    <div class="status">Diamonds: <span id="diamonds">10</span></div>
    <div class="status">Kills: <span id="kills">0</span></div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io(); // Connect to WebSocket server
    const coinsDisplay = document.getElementById('coins');
    const diamondsDisplay = document.getElementById('diamonds');
    const killsDisplay = document.getElementById('kills');

    let kills = 0;
    let coins = 1000;
    let diamonds = 10;

    // Handle server events
    socket.on('playerUpdate', (players) => {
      console.log('Player list updated:', players);
      // Update player stats (for simplicity, just display kills)
      const player = players.find(p => p.id === socket.id);
      if (player) {
        killsDisplay.textContent = player.kills;
      }
    });

    // Simulate killing an enemy
    function handleKill() {
      kills += 1;
      coins += 1000; // Earn coins for a kill
      coinsDisplay.textContent = coins;
      killsDisplay.textContent = kills;
      socket.emit('playerAction', { action: 'kill' }); // Notify server of the kill
    }

    // Simulate the action every 5 seconds
    setInterval(handleKill, 5000); // Kill every 5 seconds

  </script>
</body>
